		<!-- <PatternLayout> -->
		<!-- <pattern> -->
		<!-- [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n -->
		<!-- </pattern> -->
		<!-- </PatternLayout> -->
		<!-- </File> -->
	</Appenders>
